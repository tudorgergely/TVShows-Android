<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.tgergely.tvshows.containers.Contact">

    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contact"
            android:id="@+id/contactButton"
            android:layout_gravity="center" android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" android:layout_marginBottom="155dp"/>
    <EditText
            android:layout_width="299dp"
            android:layout_height="100dp"
            android:id="@+id/contactInput"
            android:layout_gravity="center_horizontal|top"
            android:layout_above="@+id/contactButton" android:layout_centerHorizontal="true"/>

</RelativeLayout>
